<main class="contenedor contenedor-formularios no-padding">
  <h1><%= pageName %></h1>

  <!-- Usamos enctype para poder subir archivos -->
  <form class="default-form" action="/create-group" method="POST" enctype="multipart/form-data">
    <div class="campo">
      <label for="name">Nombre</label>
      <input type="text" name="name" placeholder="Nombre del Grupo">
    </div>

    <div class="campo descripcion">
      <label>Descripción</label>
      <div class="contenedor-editor">
        <input type="hidden" id="x" name="description">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>
    <div class="campo">
      <label>Categoría</label>
      <select name="category">
        <option value="" selected disabled>-- Elige una Cateogoría</option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>"><%= category.name %> </option>
        <% }) %>  
      </select>
    </div>
    <div class="campo">
      <label>Imagen</label>
      <input type="file" name="image">
    </div>
    <div class="campo">
      <label>Sitio Web</label>
      <input type="url" name="url">
    </div>
    <div class="campo enviar">
      <input type="submit" value="Crear Grupo" class="btn btn-rosa">  
    </div>
  </form>
</main>